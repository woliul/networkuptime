{
  "name": "network-monitor-app",
  "version": "1.0.0",
  "description": "An offline network monitor built with sql.js and Electron.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "keywords": [
    "electron",
    "monitor",
    "temperature",
    "alert"
  ],
  "author": "Woliul",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.woliul.NetworkUptime",
    "productName": "NetworkUptime",
    "icon": "./assets/network.png",
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "files": [
      "main.js",
      "index.html",
      "sql/",
      "css/",
      "js/",
      "node_modules/electron/dist/ffmpeg.dll"
    ],
    "asar": true,
    "publish": [
      {
        "provider": "github",
        "owner": "woliul",
        "repo": "networkuptime"
      }
    ]
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "sql.js": "^1.13.0"
  }
}
